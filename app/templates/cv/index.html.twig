{% extends 'base.html.twig' %}

{% block title %}Hello CvController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="col-12 list-group-item align-items-center bd-content">
        <table class="table table-striped table-middle-aligned" style="width:100%">
            <thead>
            <tr>
                <th>Nom du fichier</th>
                <th>Nombre d'années d'expérience</th>
                <th>Technologies</th>
                <th scope="col" class="text-center"><i class="fa fa-cogs" aria-hidden="true"></i> Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for cv in cvList %}
                <tr>
                    <td>{{ cv.headerTitle }}</td>
                    <td>{{ cv.headerTitle }}</td>
                    <td>{{ cv.headerTitle }}</td>
                    <td class="text-right">
                        <div class="item-actions">
                            <a href="{{ path('cv_edit', {id: cv.id}) }}" class="btn btn-sm btn-info">
                                <i class="fa fa-eye" aria-hidden="true"></i> Afficher
                            </a>

                            <a href="{{ path('cv_edit', {id: cv.id}) }}" class="btn btn-sm btn-primary">
                                <i class="fa fa-edit" aria-hidden="true"></i> Edit
                            </a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="col-12">
            <a href="{{ path('cv_new') }}">
                <button type="submit" class="btn btn-primary">Nouveau CV</button>
            </a>
        </div>
    </div>
{% endblock %}
