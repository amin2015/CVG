{% extends 'base.html.twig' %}

{% block title %}Cv index{% endblock %}

{% block body %}
    <h1>Cv index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>HeaderTitle</th>
                <th>HeaderSkills</th>
                <th>FileName</th>
                <th>Logo</th>
                <th>NameSociety</th>
                <th>CommercialInformation</th>
                <th>WebsiteSociety</th>
                <th>Color</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cv in cvs %}
            <tr>
                <td>{{ cv.id }}</td>
                <td>{{ cv.headerTitle }}</td>
                <td>{{ cv.headerSkills }}</td>
                <td>{{ cv.fileName }}</td>
                <td>{{ cv.logo }}</td>
                <td>{{ cv.nameSociety }}</td>
                <td>{{ cv.commercialInformation }}</td>
                <td>{{ cv.websiteSociety }}</td>
                <td>{{ cv.color }}</td>
                <td>
                    <a href="{{ path('app_cv_controller2_show', {'id': cv.id}) }}">show</a>
                    <a href="{{ path('app_cv_controller2_edit', {'id': cv.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_cv_controller2_new') }}">Create new</a>
{% endblock %}
